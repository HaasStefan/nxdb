{
  "name": "@nxdb/cli",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "dependencies": {
    "commander": "catalog:",
    "@nxdb/db": "workspace:*",
    "@nxdb/parser": "workspace:*"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "packages/cli/dist",
          "format": [
            "esm"
          ],
          "bundle": false,
          "main": "packages/cli/src/main.ts",
          "tsConfig": "packages/cli/tsconfig.app.json",
          "assets": [
            "packages/cli/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  }
}
